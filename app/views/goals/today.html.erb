<h1 class="yesterday">Yesterday's completed goals</h1>
<% for goal in @goals_yesterday_complete unless @goals_yesterday_complete.nil? %>
<ul>
	<li class="completed"><%= goal.title %></li>
</ul>
<% end %>

<% if @goals_yesterday_complete.empty? %>
	<p>You haven't marked any as complete yet!</p>
<% end %>

<h1 class="today">Great, now how about today's goals?</h1>

<% for goal in @goals_today unless @goals_today.nil? %>
<ul>
	<li><%= goal.title %></li>
</ul>
<% end %>

<%= render 'form' %>