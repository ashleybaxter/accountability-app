<% if current_user %>

<%= render 'empty_state' if @goals.empty? %>

<% if @goals.any? && @goals.last.created_at.to_date == Date.today %>
<div class="grid__col grid__col--3-of-5 grid__col--centered goals-index">
<h1 class="header-red">Today's Goals</h1>
<ul>
<% for goal in @goals_incomplete %>
	<li><%= goal.title %><%= link_to image_tag('delete.png'), goal_path(goal), :class => 'delete', :method => 'delete', :confirm => "Are you sure?" %></li>
<% end %>
</ul>
<%= render 'form' %>
</div>

<% elsif @goals.any? && @goals.last.created_at.to_date == Date.yesterday %>
	
<div class="grid__col grid__col--3-of-5 grid__col--centered">
<h1 class="header-red">How did you do with your goals?</h1>
<%= form_tag complete_goals_path, :method => :put do %>
<ul>
<% for goal in @goals_incomplete %>
	<li><%= check_box_tag "goal_ids_#{goal.id}", goal.id, false, :name => "goal_ids[]", :multiple => true %>
			<%= label_tag ("goal_ids_#{goal.id}"), "Done" %>
			<%= goal.title %><%= link_to image_tag('delete.png'), goal_path(goal), :class => 'delete', :method => 'delete', :confirm => "Are you sure?" %></li>
<% end %>
</ul>
<%= submit_tag "Save", class: "form_submit" %>
<% end %>
</div>
<% end %>

<% end %>