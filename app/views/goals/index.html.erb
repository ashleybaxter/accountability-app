<% if current_user %>
<% unless @goals_incomplete.empty? %><div class="check-off grid__col grid__col--3-of-5 grid__col--centered"><%= link_to "Check off yesterday's goals", tomorrow_goals_path %></div><% end %>
<div class="grid__col grid__col--3-of-5 grid__col--centered goals-index">
<% unless @goals.empty? %>
<h1 class="header-red">Today's Goals</h1>
<ul>
<% for goal in @goals_incomplete %>
	<li><%= goal.title %><%= link_to image_tag('delete.png'), goal_path(goal), :class => 'delete', :method => 'delete', :confirm => "Are you sure?" %></li>
<% end %>
</ul>
<%= render 'form' %>
	<% else %>
<h1 class="header-red">Today's goals</h1>
<%= form_for @goal do |f| %>
<fieldset>
	<%= f.text_field :title, :placeholder => "Add your first goal, hit enter", :autofocus => true %>
</fieldset>
<% unless @goals_incomplete.empty? %>
<% if @goals_incomplete.last.created_at > 10.seconds.ago %><%= link_to "Save all of today's goals", tomorrow_goals_path, class: "finished" %><% end %>
<% end %>
<% end %>
<% end %>
</div>

<% else %>

<% end %>